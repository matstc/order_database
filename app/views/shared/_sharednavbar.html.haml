
.navbar.navbar-inverse
  .navbar-inner
    .container
      / .btn-navbar is used as the toggle for collapsed navbar content
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar 
        %span.icon-bar
        %span.icon-bar
      / Be sure to leave the brand out there if you want it shown
      .brand#hide_brand_desktop Mujeres Cambia
      / Everything you want hidden at 940px or less, place within here
      .nav-collapse
        %ul.nav
          -#Buyers
          %li{:class => "dropdown #{visited_class('buyers')}"}
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "/buyers"}
              = t "nav.buyers"
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Ver Todos los Compradores', buyers_path
              %li= link_to 'Crear Comprador Nuevo', new_buyer_path


          -#Sales          
          %li{:class => "dropdown #{visited_class('sales')}"}
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "/buyers"}
              = t "nav.sales"
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Ver Todas Las Ventas', sales_path
              %li= link_to 'Crear Comprador Nuevo', new_sale_path