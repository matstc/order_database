<h1>Buyers</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Company</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.company %></td>
        <td><%= buyer.contact_name %></td>
        <td><%= buyer.contact_email %></td>
        <td><%= buyer.contact_phone_1 %></td>
        <td><%= link_to 'Show', buyer %></td>
        <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
        <td><%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

