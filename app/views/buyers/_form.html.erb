                    </div>
              </div>
              <div class="span5">
                    <div class="field">
                      <%= f.label :special_instructions %><br>
                      <%= f.text_area :special_instructions, :rows => 6 %>
                    </div>
              </div>
              
        </div>
</div>

</div>


