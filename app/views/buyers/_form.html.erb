              </div>
              <div class="span5">
                    <div class="field">
                      <%= f.label :Telephone %>
                      <%= f.text_field :contact_phone_1, placeholder: "primary" %>
                      <%= f.text_field :contact_phone_2, placeholder: "secondary"%>
                    </div>
                    <div class="field">
                      <%= f.label :shipping_address %>
                      <%= f.text_field  :shipping_address_line_1, placeholder:"1234 Main Street" %>
