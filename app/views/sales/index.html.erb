<h1>Sales</h1>
<h2>Total: <%= number_to_currency @sales.sum('amount')  %> and in <%= Date.today.strftime("%B")  %>: 

   <%= number_to_currency @sales.sum(:amount, :conditions => {:date => 
              (Date.today.beginning_of_month..Date.today.end_of_month)})%>
 </h2>


<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Factura</th>
      <th>Actions</th>
 
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>

        <td><%= sale.name %></td>
        <td><%= number_to_currency(sale.amount) %></td>
        <td><%= sale.date %></td>
        <td><% if sale.factura_file_name %> Attached<% end %></td>
        <td><%= link_to 'View', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Delete', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale', new_sale_path %>
