
	<%= grid(@customers_grid)do |g|



        g.column name:  'ID', attribute: 'id' do |customer|link_to  customer.id, customer end
        

    	g.column name:  'Compañía', attribute: 'compania' do |customer|link_to  customer.compania, customer end
		
		
    	g.column name:  'Contacto', attribute: 'nombre_de_contacto', class: "hidden-phone" do |customer|link_to  customer.nombre_de_contacto, customer end
		

    	g.column name:  'Email', attribute: 'email_de_contacto', class: "hidden-phone",
    	detach_with_id: :email_de_contacto_filter do |customer|link_to  customer.email_de_contacto, customer end
		

    	g.column name:  'Teléfono', attribute: 'telefono_1', class: "hidden-phone",
    	detach_with_id: :telefono_1_filter do |customer|link_to  customer.telefono_1, customer end
		

	end -%>
